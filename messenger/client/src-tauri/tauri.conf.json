{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "messanger-tauri",
  "version": "2.2.8",
  "identifier": "com.messanger-tauri.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Наш любимый мессенджер!",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ],
    "resources": [
      "java/ChatClient.app"
    ]
  }
}
